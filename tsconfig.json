{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "commonjs",                                
     "typeRoots": ["node_modules/@types", "src/types"],         
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
